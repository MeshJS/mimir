# Server Configuration
API_KEY=autodocs_your_api_key_here
PORT=3001

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_TABLE=autodocs_chunks
SIMILARITY_THRESHOLD=0.5
MATCH_COUNT=10

# Database Setup (for Docker/Makefile)
# Option 1: Direct PostgreSQL connection string
# DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
# Option 2: Supabase project password (auto-constructed in Docker)
# SUPABASE_DB_PASSWORD=your_database_password

# GitHub Configuration
GITHUB_URL=https://github.com/owner/repo
GITHUB_DIRECTORY=src
GITHUB_BRANCH=main
GITHUB_TOKEN=ghp_your_token

# Optional: Local cache for downloaded files
# GITHUB_OUTPUT_DIR=./tmp/github-cache

# Parser Configuration
EXTRACT_VARIABLES=false
EXTRACT_METHODS=true
# Comma-separated patterns to exclude
# EXCLUDE_PATTERNS=*.test.ts,*.spec.ts,__tests__

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# LLM Provider Configuration
# Supported providers: openai, google, anthropic, mistral

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=sk-your_openai_key

# Chat Configuration (for context generation)
CHAT_PROVIDER=openai
CHAT_MODEL=gpt-4o-mini
CHAT_MAX_TOKENS=500
CHAT_TEMPERATURE=0.3

# Alternative: Google
# EMBEDDING_PROVIDER=google
# EMBEDDING_MODEL=text-embedding-004
# CHAT_PROVIDER=google
# CHAT_MODEL=gemini-1.5-flash
# GOOGLE_API_KEY=your_google_key

# Alternative: Anthropic (chat only, no embeddings)
# CHAT_PROVIDER=anthropic
# CHAT_MODEL=claude-3-haiku-20240307
# ANTHROPIC_API_KEY=your_anthropic_key

# Alternative: Mistral
# EMBEDDING_PROVIDER=mistral
# EMBEDDING_MODEL=mistral-embed
# CHAT_PROVIDER=mistral
# CHAT_MODEL=mistral-small-latest
# MISTRAL_API_KEY=your_mistral_key

# Rate Limiting (optional overrides)
# EMBEDDING_BATCH_SIZE=100
# EMBEDDING_CONCURRENCY=5
# EMBEDDING_RPM=500
# EMBEDDING_TPM=1000000
# CHAT_CONCURRENCY=5
# CHAT_RPM=500

# Only include files from specific directories (comma-separated)
# Example: Only include packages/utils and packages/core
# GITHUB_INCLUDE_DIRECTORIES=packages/utils,packages/core